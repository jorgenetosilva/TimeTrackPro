<div class="card mb-3"> <!-- uk-card uk-card-default uk-margin-top -->
    <div class="card-header"> <!-- uk-card-header -->
        <h2 class="card-title mb-1">Empresas | Pesquisa Empresas</h2> <!-- uk-card-title -->
    </div>
    <form id="form-empresa">
        <div class="card-body"> <!-- uk-card-body responsive-body -->
            <div class="row g-2 align-items-center"> <!-- uk-grid-small uk-flex-middle responsive-grid -->
                <div class="col-md-4 col-12"> <!-- uk-width-1-3@s uk-width-1-1 -->
                    <input name="nome" class="form-control form-control-lg" id="input-empresa" placeholder="Empresa"> <!-- uk-input uk-form-medium -->
                </div>
                <div class="col-md-4 col-12"> <!-- uk-width-1-3@s uk-width-1-1 -->
                    <input name="cidade" class="form-control form-control-lg" id="input-cidade" placeholder="Cidade"> <!-- uk-input uk-form-medium -->
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end"> <!-- uk-margin-top responsive-margin uk-flex uk-flex-right -->
                <!-- Os botões de parâmetros e cadastro foram comentados no original, assim mantidos aqui. -->
                <button class="btn btn-danger" type="button" onclick='ativus.empresa.getBuscar()'>Pesquisar</button> <!-- uk-button responsive-button uk-button-primary -->
            </div>
        </div>
    </form>
</div>
<div id="grid"></div>

